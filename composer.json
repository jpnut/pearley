{
    "name": "jpnut/pearley",
    "description": "php implementation of the Earley parsing algorithm, based on nearley.js",
    "keywords": [
        "pearley",
        "earley",
        "nearley",
        "parser",
        "lexer"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jamie Nuttall",
            "email": "nuttalljamie@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "JPNut\\Pearley\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JPNut\\Pearley\\Tests\\": "tests/",
            "JPNut\\Pearley\\Examples\\": "examples/php/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "bin": [
        "bin/pearley"
    ]
}
